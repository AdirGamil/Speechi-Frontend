# ===========================================
# Speechi Frontend Environment Variables
# ===========================================
# Copy this file to .env for local development
# Create .env.production for production builds
# NEVER commit .env files with production URLs

# ---- API Configuration ----
# Base URL for backend API (no trailing slash)
#
# The URL structure depends on your backend configuration:
#
# Development (with /api prefix):
#   VITE_API_BASE_URL=http://127.0.0.1:8000/api
#   Routes: /api/process-meeting, /api/health, etc.
#
# Production (no prefix, separate API domain):
#   VITE_API_BASE_URL=https://speechi-api.adirg.dev
#   Routes: /process-meeting, /health, etc.
#
# Production (with /api prefix, same domain):
#   VITE_API_BASE_URL=https://speechi.adirg.dev/api
#   Routes: /api/process-meeting, /api/health, etc.

VITE_API_BASE_URL=http://127.0.0.1:8000/api

# ---- App Environment ----
# Values: development, production
VITE_APP_ENV=development

